    <gap:plugin spec="https://github.com/sjhoeksma/cordova-plugin-keychain-touch-id" source="git"/>

    
    <edit-config target="LSApplicationQueriesSchemes" file="*-Info.plist" mode="replace">
        <array>
             <string>withings-bd2</string>
             <string>iHealthMyVitalsAHA</string>
             <string>mfp-misfitwearables</string>
             <string>fitbit</string>
             <string>jawbone-up2</string>
        </array>
    </edit-config>
    <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="replace">
        <string>SynsorMed uses your camera to facilitate secure video visits</string>
    </edit-config>
    <edit-config target="NSMicrophoneUsageDescription" file="*-Info.plist" mode="replace">
        <string>SynsorMed uses your microphone facilitate secure video visits</string>
    </edit-config>
    <edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="replace">
        <string>SynsorMed uses your GPS to help troubleshoot issues with your remote devices</string>
    </edit-config>
    <edit-config target="NSBluetoothPeripheralUsageDescription" file="*-Info.plist" mode="replace">
        <string>SynsorMed uses Bluetooth to gather health data and securely send to your provider</string>
    </edit-config>

