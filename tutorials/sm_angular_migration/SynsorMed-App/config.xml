<?xml version='1.0' encoding='utf-8'?>
<widget id="com.synsormed.mobile" version="3.4" android-versionName="3.4" CFBundleVersion="3200" android-versionCode="3200" versionCode="3200" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>SynsorMed</name>
    <description>
        SynsorMed is a software platform for physician specialists that will reduce costly patient follow-up visits and increase practice revenues by offering a HIPAA-compliant mobile tele-health solution that easily integrates into their current workflow.
    </description>
    <author href="http://www.synsormed.com">
        SynsorMed Inc.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    
    <platform name="android">
        <resource-file src="google-services.json" target="google-services.json" />
    </platform>

    <preference name="DisallowOverscroll" value="true"/>
    <preference name="webviewbounce" value="false" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="26" />
    <preference name="phonegap-version" value="cli-7.1.0" />
    <preference name="PlayServicesVersion" value="11.0.1"/>
    <preference name="loadUrlTimeoutValue" value="700000"/>


    <platform name="android">
        <resource-file src="google-services.json" target="google-services.json" />
    </platform>
    
    <platform name="ios">
    </platform>

    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>

    <gap:plugin name="cordova-plugin-console" version="1.1.0" source="npm" />
    <gap:plugin name="cordova-plugin-network-information" version="1.2.1" source="npm" />
    <gap:plugin name="cordova-plugin-device" version="2.0.2" source="npm" />
    <gap:plugin name="cordova-plugin-device-motion" version="1.2.1" source="npm" />
    <gap:plugin name="cordova-plugin-device-orientation" version="1.0.3" source="npm" />
    <gap:plugin name="cordova-plugin-media" version="2.3.0 " source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" version="1.4.0" />
    <gap:plugin name="cordova-plugin-statusbar" source="npm" version="2.2.0" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" version="1.3.3" />
    <gap:plugin name="cordova-plugin-android-permissions" source="npm" version="1.0.0" />
    <gap:plugin name="phonegap-plugin-push" source="npm" version="2.1.2">
         <param name="SENDER_ID" value="586253251790" />
    </gap:plugin>
